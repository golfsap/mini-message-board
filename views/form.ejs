<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h2>Create a new message</h2>
    <% if (locals.errors && locals.errors.length > 0) { %>
    <ul style="color: red">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
    <form method="POST" action="/new">
      <div class="form-inputs">
        <label>Name: </label>
        <input
          type="text"
          name="messageUser"
          value="<%= locals.messageUser || '' %>"
        />
        <label>Message:</label>
        <input
          type="text"
          name="messageText"
          value="<%= locals.messageText || '' %>"
        />
        <button type="submit">Submit</button>
      </div>
    </form>
    <a href="/">Back to message board</a>
  </body>
</html>
